@model chat.Models.LoginViewModel

@{
    ViewData["Title"] = "User Login";
}

<div class="container">
    <div class="row">
        <div class="col-sm">
            <div class="maintitle text-light">
                <b>Welcome to the</b> <t class="markertext">C-Chat</t>!
            </div>
            <br>
            <t class="secondtitle text-light">
                Not a member now?
                <t>
                    <a asp-controller="account" asp-action="Register"
                       class="nav-link" style="color:deeppink">
                        Sign Up
                    </a>
                </t>
            </t>

        </div>
        <div class="col-sm">
            <div class="authcontainer cardflat">
                <form method="post">

                    <div class="row justify-content-center">
                        <label class="text-light" asp-for="UserName"></label>
                    </div>
                    <div class="row justify-content-center">
                        <input class="concavecard text-white" asp-for="UserName" />
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>
                    <div class="row justify-content-center">
                        <label class="text-light" asp-for="Password"></label>
                    </div>
                    <div class="row justify-content-center">
                        <input class="concavecard text-white" asp-for="Password" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="row justify-content-center">
                        <div class="check-button">
                            <div for="click" class="toggle">
                                <input type="checkbox" asp-for="RememberMe"  id="rememberme" name="rememberme">
                            </div>
                        </div>
                        <nobr><label class="text" for="rememberme"></label></nobr>
                    </div>
                    <script>
                        document.querySelector('.toggle').addEventListener('click', function () {
                            document.querySelector('.text').classList.toggle('check');
                        });
                    </script>
                    <div class="row justify-content-center">
                        <button class="loginbutton text-light" id="login">Login</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>