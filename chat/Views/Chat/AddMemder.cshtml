@model chat.ViewModels.AddUserViewModel


@if (Model.AddUsers)
{
<form asp-controller="Chat" asp-action="AddMemder" 
      asp-route-ChatId="@Model.ChatId" asp-route-AddUsers="@Model.AddUsers">

    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group row">
        <label asp-for="UserName" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="UserName" class="form-control" placeholder="WriteUserName">
        </div>
    </div>

    <div class="form-group row">
        <div class="col-sm-10">
            <button class="btn btn-primary">Send</button>
        </div>
    </div>
</form>
} 
else
{
<label>You don't have access to this</label>
}
