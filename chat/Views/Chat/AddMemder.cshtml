@model chat.ViewModels.AddUserViewModel

<form asp-controller="Chat" asp-action="AddMemder" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <input asp-for="ChatId" value="@Model.ChatId" type="hidden" />
    <div class="form-group row">
        <label asp-for="UserName" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="UserName" class="form-control" placeholder="WriteUserName">
        </div>
    </div>

    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Send</button>
        </div>
    </div>
</form>