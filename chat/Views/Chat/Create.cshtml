@model Chat


    <form enctype="multipart/form-data" asp-controller="Chat" asp-action="Create" method="post" class="mt-3">
        <div class="form-group row">
            <label asp-for="ChatName" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="ChatName" class="form-control" placeholder="Name">
                <span asp-validation-for="ChatName" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-sm-10">
                <button type="submit" class="btn btn-primary">Create</button>
            </div>
        </div>
    </form>