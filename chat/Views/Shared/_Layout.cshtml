@inject SignInManager<AppUser> signInManager;
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - chat</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <script type="text/javascript" src="/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://kit.fontawesome.com/5da3db78a1.js" crossorigin="anonymous"></script>

</head>

<body class="back">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm cardflat">
            <div class="container">
                <div class="logo cardconvex">C</div>

                <button class="navbar-toggler" type="button" data-toggle="collapse"
                        data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">

                    <span class="navbar-toggler-icon"></span>

                </button>



                @if (signInManager.IsSignedIn(User))
                {
                    <form method="get" asp-action="Edit" asp-controller="User">
                        <button type="submit">
                            Edit
                        </button>
                    </form>

                    <form method="post" asp-action="logout" asp-controller="account">
                        <button type="submit">
                            Logout @User.Identity.Name
                        </button>
                    </form>
                }
                else
                {
                    <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item">
                                <a class="nav-link text-light headerbutton cardconvex"
                                   asp-action="login" asp-controller="account">Login</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-light headerbutton cardconvex"
                                   asp-action="register" asp-controller="account">Sign up</a>
                            </li>
                        </ul>
                    </div>
                }
                @{
                    var routeValues = this.ViewContext.RouteData.Values;
                    var controller = routeValues["controller"] as string;
                    var action = routeValues["action"] as string;
                }
                <ul class="nav navbar-nav navbar-right">
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle markertext" data-toggle="dropdown" role="button" aria-expanded="false">Сhoose language <span class="caret"></span></a>
                        <ul class="dropdown-menu back  " role="menu">
                            <li class="dropdown-item-text">@Html.ActionLink("Ukrane", @action, @controller, new { culture = "uk-ua" }, new { rel = "alternate", hreflang = "ua" })</li>
                            <li class="dropdown-item-text">@Html.ActionLink("English", @action, @controller, new { culture = "en-us" }, new { rel = "alternate", hreflang = "en" })</li>
                            <li class="dropdown-item-text">@Html.ActionLink("Deutsche", @action, @controller, new { culture = "de-de" }, new { rel = "alternate", hreflang = "de" })</li>
                        </ul>
                    </li>
                </ul>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer text-muted cardflat">
        <div class="container">
            &copy; 2020 - chat - <a asp-controller="Account" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
